@model List<LordOfFrames.Models.Game>

@{
    ViewData["Title"] = "Games";
}

<!DOCTYPE html>

<html>
<head>
    <title>Games</title>
</head>
<body>
<div>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
        </tr>
        @foreach (var game in Model)
        {
            <tr>
                <td><a asp-area="" asp-controller="Game" asp-action="ViewSingle" asp-route-id="@game.Id">@game.Id</a></td>
                <td>@game.Name</td>
                <td>@game.Description</td>
            </tr>
        }
    </table>
</div>
</body>
</html>